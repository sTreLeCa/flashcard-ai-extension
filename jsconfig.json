// jsconfig.json (Place in the project root directory)
{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "checkJs": true,
    "strict": false,
    "lib": [
      "ES2020",
      "WebWorker", // Keep this for background.js
      "DOM", // <--- ADD THIS for window, document, etc.
      "DOM.Iterable" // <--- ADD THIS for DOM iteration features
    ],
    "types": ["chrome"], // Keep this explicit addition
    "baseUrl": "."
  },
  "include": [
    "background.js",
    "content.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "react-popup-src"
  ]
}