{
  "manifest_version": 3,
  "name": "Flashcard AI Extension",
  "version": "1.0",
  "description": "Create and review flashcards from web content with gesture recognition.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flashcard AI"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}